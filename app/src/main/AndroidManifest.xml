<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="it.neptis.gopoleis">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- PERMESSI UTILIZZATI PER CONFIGURARE GOOGLE MAPS -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <application
        android:name=".GopoleisApp"
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".activities.PortalsMainActivity"
            android:label="GoPoleis"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.TreasurePortalPag1Activity"
            android:parentActivityName=".activities.PortalsMainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.TreasurePortalPag2Activity"
            android:parentActivityName=".activities.TreasurePortalPag1Activity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.TravelPortalActivity"
            android:parentActivityName=".activities.PortalsMainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.MedalsActivity"
            android:parentActivityName=".activities.TravelPortalActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.PuzzlePortalActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.AchievementsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.ManageCardsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.CardDetailsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.TreasureActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.HeritageActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.PathActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.StageActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".activities.MyPathsActivity" />
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/title_activity_main"
            android:screenOrientation="portrait"/>
    </application>

</manifest>