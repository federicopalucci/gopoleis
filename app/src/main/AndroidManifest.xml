<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="it.neptis.gopoleis">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- PERMESSI UTILIZZATI PER CONFIGURARE GOOGLE MAPS -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <application
        android:name="it.neptis.gopoleis.GopoleisApp"
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name="it.neptis.gopoleis.activities.PortalsMainActivity"
            android:label="GoPoleis">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="it.neptis.gopoleis.activities.TreasurePortalPag1Activity"
            android:parentActivityName="it.neptis.gopoleis.activities.PortalsMainActivity" />
        <activity
            android:name="it.neptis.gopoleis.activities.TreasurePortalPag2Activity"
            android:parentActivityName="it.neptis.gopoleis.activities.TreasurePortalPag1Activity" />
        <activity
            android:name="it.neptis.gopoleis.activities.TravelPortalActivity"
            android:parentActivityName="it.neptis.gopoleis.activities.PortalsMainActivity" />
        <activity
            android:name="it.neptis.gopoleis.activities.MedalsActivity"
            android:parentActivityName="it.neptis.gopoleis.activities.TravelPortalActivity" />
        <activity android:name="it.neptis.gopoleis.activities.PuzzlePortalActivity" />
        <activity android:name="it.neptis.gopoleis.activities.AchievementsActivity" />
        <activity android:name="it.neptis.gopoleis.activities.ShowPuzzleActivity" />
        <activity android:name="it.neptis.gopoleis.activities.ManageCardsActivity" />
        <activity android:name="it.neptis.gopoleis.activities.TreasureInfoActivity" />
        <activity android:name="it.neptis.gopoleis.activities.TreasureNotFoundActivity" />
        <activity android:name="it.neptis.gopoleis.activities.TreasureFoundActivity" />
        <activity
            android:name="it.neptis.gopoleis.activities.PuzzleAnswerActivity"
            android:theme="@android:style/Theme.Holo.Light.Dialog.NoActionBar" />
        <activity android:name="it.neptis.gopoleis.activities.ShowMyPuzzlesActivity" />
        <activity android:name="it.neptis.gopoleis.activities.CardDetailsActivity" />
    </application>

</manifest>