<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="500dp"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:layout_gravity="center"
    android:gravity="center">


    <ImageView
        android:id="@+id/mycards_list_image"
        android:layout_weight="1"
        android:src="@drawable/card"
        android:background="@android:color/transparent"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:adjustViewBounds="true"
        android:padding="15dp"
        android:scaleType="fitCenter"
        android:layout_marginLeft="122dp"

        android:layout_alignTop="@+id/achieve"
        android:layout_centerHorizontal="true" />

    <RelativeLayout
        android:layout_width="280dp"
        android:layout_height="250dp"
        android:layout_marginTop="17dp"
        android:gravity="center_vertical"
        android:id="@+id/relativeLayout"
        android:layout_below="@+id/portal"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/lens"
            android:src="@drawable/lens"
            android:layout_weight="5"
            android:background="@android:color/transparent"
            android:layout_width="220dp"
            android:layout_height="190dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <Spinner
            android:id="@+id/spinner_menu"
            android:layout_height="33dp"
            android:background="@android:drawable/btn_dropdown"
            android:layout_width="100dp"
            android:layout_marginLeft="70dp"
            android:layout_marginBottom="13dp"
            android:layout_alignBottom="@+id/imageView"
            android:layout_alignEnd="@+id/lens"
            android:layout_marginEnd="39dp" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/freccia_lente"
            android:id="@+id/imageView"
            android:layout_marginEnd="25dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/t_lente"
            android:layout_width="180dp"
            android:layout_height="90dp"
            android:text="Cliccando sul menù a tendina, l'utente può accedere ai beni culturali disponibili e scegliere quello a cui si trova più vicino per iniziare a giocare"
            android:textSize="13dp"
            android:textColor="#E65100"
            android:layout_marginBottom="8dp"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/spinner_menu"
            android:layout_marginStart="7dp"
            android:textStyle="bold"/>

    </RelativeLayout>


    <ImageView
        android:id="@+id/cards_list_image"
        android:layout_weight="1"
        android:src="@drawable/cards_icon"
        android:background="@android:color/transparent"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:adjustViewBounds="true"
        android:padding="15dp"
        android:scaleType="fitCenter"
        android:layout_alignTop="@+id/mycards_list_image"
        android:layout_alignEnd="@+id/relativeLayout" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/achieve"
        android:src="@android:drawable/btn_star_big_on"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:padding="15dp"
        android:layout_below="@+id/relativeLayout"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/t_icone"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Queste 3 icone rappresentano rispettivamente, achievements, carte possedute dall'utente e tutte le carte disponibili nel gioco. Cliccando sulle rispettive icone possiamo accedervi."
        android:textSize="13sp"
        android:textColor="#00E676"
        android:layout_below="@+id/mycards_list_image"
        android:layout_alignStart="@+id/achieve"
        android:textStyle="bold"/>


    <ImageView
        android:id="@+id/freccia_c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/freccie_a_c_ac"
        android:layout_below="@+id/relativeLayout"
        android:layout_alignStart="@+id/relativeLayout"
        android:layout_marginStart="14dp" />

    <ImageView
        android:id="@+id/freccia_a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/freccie_a_c_ac"
        android:layout_above="@+id/mycards_list_image"
        android:layout_centerHorizontal="true" />


    <RelativeLayout
        android:layout_width="95dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="false">

        <Button
            android:id="@+id/avanti_tpp1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/cardview_shadow_end_color"
            android:onClick="avanti_tpp1"
            android:clickable="true"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ok_icon"
            android:background="@android:color/transparent"
            android:id="@+id/imageButton"
            android:layout_marginStart="27dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            />


    </RelativeLayout>

    <ImageView
        android:id="@+id/freccia_ac"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/freccie_a_c_ac"
        android:layout_above="@+id/cards_list_image"
        android:layout_alignStart="@+id/cards_list_image"
        android:layout_marginStart="27dp" />


</RelativeLayout>