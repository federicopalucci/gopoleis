<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.example.anna.neptis.activities.PortalsMainActivity"
        android:touchscreenBlocksFocus="false"
        android:layout_gravity="center"
        android:gravity="center"
    >

        <ImageButton
            android:layout_width="@dimen/portal_width"
            android:layout_height="140dp"
            android:id="@+id/yellow_portal"
            android:src="@drawable/portal"
            android:scaleType="fitCenter"
            android:padding="@dimen/padding_portal"
            android:background="@android:color/transparent"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/title_text"
            />

        <ImageButton
            android:layout_width="@dimen/portal_width"
            android:layout_height="140dp"
            android:id="@+id/green_portal"
            android:src="@drawable/portal"
            android:scaleType="fitCenter"
            android:padding="@dimen/padding_portal"
            android:background="@android:color/transparent"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/title_text"
        />

        <ImageButton
            android:layout_width="@dimen/portal_width"
            android:layout_height="140dp"
            android:id="@+id/blue_portal"
            android:src="@drawable/portal"
            android:scaleType="fitCenter"
            android:padding="@dimen/padding_portal"
            android:background="@android:color/transparent"
            android:layout_above="@+id/accesso"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="24dp"
            />

        <ImageView
            android:layout_width="@dimen/logo_width_height_size"
            android:layout_height="@dimen/logo_width_height_size"
            android:id="@+id/logo_app"
            android:src="@drawable/logo"
            android:background="@android:color/transparent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
        />

        <ImageButton
            android:layout_width="@dimen/portal_width"
            android:layout_height="140dp"
            android:id="@+id/red_portal"
            android:src="@drawable/portal"
            android:scaleType="fitCenter"
            android:padding="@dimen/padding_portal"
            android:background="@android:color/transparent"
            android:layout_above="@+id/accesso"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="24dp"
            />

        <TextView
            android:id="@+id/accesso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hai effettuato il login come: "
            android:textSize="12sp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="8dp"
            />

        <ImageButton
            android:layout_height="23dp"
            android:layout_width="23dp"
            android:id="@+id/logout_icon"
            android:src="@drawable/exit_logout"
            android:scaleType="centerCrop"
            android:background="@android:color/transparent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/gopoleis"
            android:id="@+id/title_text"
            android:textSize="@dimen/title_size"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
        />

    </RelativeLayout>