<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activities.PortalsMainActivity">

    <ImageButton
        android:id="@+id/yellow_portal"
        android:layout_width="@dimen/portal_width"
        android:layout_height="140dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/title_text"
        android:background="@android:color/transparent"
        android:padding="@dimen/padding_portal"
        android:scaleType="fitCenter"
        android:src="@drawable/portal" />

    <ImageButton
        android:id="@+id/green_portal"
        android:layout_width="@dimen/portal_width"
        android:layout_height="140dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/title_text"
        android:background="@android:color/transparent"
        android:padding="@dimen/padding_portal"
        android:scaleType="fitCenter"
        android:src="@drawable/portal" />

    <ImageButton
        android:id="@+id/blue_portal"
        android:layout_width="@dimen/portal_width"
        android:layout_height="140dp"
        android:layout_above="@+id/accesso"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="24dp"
        android:background="@android:color/transparent"
        android:padding="@dimen/padding_portal"
        android:scaleType="fitCenter"
        android:src="@drawable/portal" />

    <ImageView
        android:id="@+id/logo_app"
        android:layout_width="@dimen/logo_width_height_size"
        android:layout_height="@dimen/logo_width_height_size"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@android:color/transparent"
        android:src="@drawable/logo" />

    <ImageButton
        android:id="@+id/red_portal"
        android:layout_width="@dimen/portal_width"
        android:layout_height="140dp"
        android:layout_above="@+id/accesso"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="24dp"
        android:background="@android:color/transparent"
        android:padding="@dimen/padding_portal"
        android:scaleType="fitCenter"
        android:src="@drawable/portal" />

    <TextView
        android:id="@+id/accesso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="8dp"
        android:text="@string/logged_in_as"
        android:textSize="12sp" />

    <ImageButton
        android:id="@+id/logout_icon"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@android:color/transparent"
        android:scaleType="centerCrop"
        android:src="@drawable/exit_logout" />

    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/gopoleis"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="@dimen/title_size" />

</RelativeLayout>