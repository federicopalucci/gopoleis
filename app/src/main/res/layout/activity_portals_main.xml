<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.example.anna.neptis.activities.PortalsMainActivity"
        android:touchscreenBlocksFocus="false"
        android:layout_gravity="center"
        android:gravity="center">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="420dp"
            android:id="@+id/portali"
            android:gravity="center"
            android:layout_marginTop="70dp">


            <ImageButton
                android:layout_width="@dimen/portal_width"
                android:layout_height="140dp"
                android:id="@+id/yellow_portal"
                android:src="@drawable/portal"
                android:scaleType="fitCenter"
                android:padding="@dimen/padding_portal"
                android:background="@android:color/transparent"
                android:layout_marginBottom="220dp"
                android:layout_marginEnd="180dp"/>

            <ImageButton
                android:layout_width="@dimen/portal_width"
                android:layout_height="140dp"
                android:id="@+id/green_portal"
                android:src="@drawable/portal"
                android:scaleType="fitCenter"
                android:padding="@dimen/padding_portal"
                android:background="@android:color/transparent"
                android:layout_marginStart="180dp"
                android:layout_marginBottom="220dp"
                />

            <ImageButton
                android:layout_width="@dimen/portal_width"
                android:layout_height="140dp"
                android:id="@+id/red_portal"
                android:src="@drawable/portal"
                android:scaleType="fitCenter"
                android:padding="@dimen/padding_portal"
                android:background="@android:color/transparent"
                android:layout_marginTop="220dp"
                android:layout_marginEnd="180dp"
                />

            <ImageButton
                android:layout_width="@dimen/portal_width"
                android:layout_height="140dp"
                android:id="@+id/blue_portal"
                android:src="@drawable/portal"
                android:scaleType="fitCenter"
                android:padding="@dimen/padding_portal"
                android:background="@android:color/transparent"
                android:layout_marginTop="220dp"
                android:layout_marginStart="180dp"
                />


            <ImageView
                android:layout_width="@dimen/logo_width_height_size"
                android:layout_height="@dimen/logo_width_height_size"
                android:id="@+id/logo_app"
                android:src="@drawable/logo"
                android:layout_marginEnd="9dp"
                android:layout_marginTop="145dp"
                android:layout_marginStart="113dp"
                android:background="@android:color/transparent"
                />



            <TextView
                android:id="@+id/accesso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/red_portal"
                android:text="Hai effettuato il login come: "
                android:layout_marginTop="35dp"
                android:layout_marginStart="10dp"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/nome_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/red_portal"
                android:text=""
                android:layout_marginTop="35dp"
                android:layout_marginStart="162dp"
                android:textSize="12sp"/>

            <ImageButton
                android:layout_height="23dp"
                android:layout_width="23dp"
                android:onClick="logout"
                android:id="@+id/logout_icon"
                android:src="@drawable/exit_logout"
                android:scaleType="centerCrop"
                android:background="@android:color/transparent"
                android:layout_below="@+id/red_portal"
                android:layout_marginTop="30dp"
                android:layout_marginStart="280dp"
                />

        </RelativeLayout>

        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/gopoleis"
            android:id="@+id/title_text"
            android:textSize="@dimen/title_size"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginStart="75dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="450dp" />

        <!--<ImageButton
            android:layout_height="35dp"
            android:layout_width="35dp"
            android:onClick="logout"
            android:id="@+id/logout_icon"
            android:src="@drawable/exit_logout"
            android:scaleType="centerCrop"
            android:background="@android:color/transparent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/title_text" />-->

        <!---->





    </RelativeLayout>
</ScrollView>
